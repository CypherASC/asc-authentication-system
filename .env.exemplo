# ========================================
# ASC - Configurações de Segurança
# ========================================

# OBRIGATÓRIO EM PRODUÇÃO
NODE_ENV=development
CHAVE_SECRETA=sua-chave-secreta-de-64-caracteres-minimo-para-producao

# ========================================
# CONFIGURAÇÕES JWT
# ========================================
JWT_ALGORITMO=HS256
JWT_ISSUER=ASC-System
JWT_AUDIENCE=ASC-Client
JWT_REFRESH_AUDIENCE=ASC-Refresh
TEMPO_EXPIRACAO_TOKEN=24h
TEMPO_EXPIRACAO_REFRESH=7d

# ========================================
# CONFIGURAÇÕES DE SENHA
# ========================================
SENHA_TAMANHO_MINIMO=8
SENHA_EXIGIR_MAIUSCULA=true
SENHA_EXIGIR_MINUSCULA=true
SENHA_EXIGIR_NUMERO=true
SENHA_EXIGIR_ESPECIAL=true
SENHA_CARACTERES_ESPECIAIS=!@#$%^&*(),.?":{}|<>
SENHA_PONTUACAO_MINIMA=4
BCRYPT_SALT_ROUNDS=12

# ========================================
# CONFIGURAÇÕES DE CRIPTOGRAFIA
# ========================================
CRYPTO_ALGORITMO=aes-256-cbc
CRYPTO_SALT=salt-personalizado-para-sua-aplicacao
CRYPTO_TAMANHO_CHAVE=32
CRYPTO_TAMANHO_IV=16

# ========================================
# CONFIGURAÇÕES DE RATE LIMITING
# ========================================
RATE_LIMIT_JANELA_GERAL=900000
RATE_LIMIT_MAX_GERAL=100
RATE_LIMIT_JANELA_AUTH=900000
RATE_LIMIT_MAX_AUTH=5
RATE_LIMIT_JANELA_REGISTRO=3600000
RATE_LIMIT_MAX_REGISTRO=3
RATE_LIMIT_JANELA_RENOVACAO=300000
RATE_LIMIT_MAX_RENOVACAO=10

# ========================================
# CONFIGURAÇÕES DE IP
# ========================================
IP_BLOQUEIO_TEMPO=15
IP_MAX_TENTATIVAS=5
IP_WHITELIST=127.0.0.1,::1
IP_BLACKLIST=

# ========================================
# CONFIGURAÇÕES DE SERVIDOR
# ========================================
PORTA=3000
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# ========================================
# CONFIGURAÇÕES DE BANCO DE DADOS
# ========================================
# PostgreSQL
DATABASE_URL=postgresql://usuario:senha@localhost:5432/asc_auth

# MongoDB
MONGODB_URI=mongodb://localhost:27017/asc_auth

# MySQL
MYSQL_URL=mysql://usuario:senha@localhost:3306/asc_auth

# ========================================
# CONFIGURAÇÕES SSL/HTTPS
# ========================================
HTTPS=false
SSL_CERT=/caminho/para/certificado.pem
SSL_KEY=/caminho/para/chave-privada.pem

# ========================================
# CONFIGURAÇÕES DE LOGS
# ========================================
LOG_LEVEL=info
LOG_FILE=logs/asc.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5